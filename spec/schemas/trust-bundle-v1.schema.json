{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://protocol.ignyteanchor.com/schemas/trust-bundle-v1.schema.json",
  "title": "TrustBundle",
  "type": "object",
  "required": ["bundle_id", "issued_at", "expires_at", "issuers", "signature", "signer_public_key_kid"],
  "properties": {
    "bundle_id": {"type": "string"},
    "issued_at": {"type": "string", "format": "date-time"},
    "expires_at": {"type": "string", "format": "date-time"},
    "issuers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["issuer_id", "issuer_kid", "public_key", "valid_from", "valid_until", "assurance_tier"],
        "properties": {
          "issuer_id": {"type": "string"},
          "issuer_kid": {"type": "string"},
          "public_key": {"type": "string"},
          "valid_from": {"type": "string", "format": "date-time"},
          "valid_until": {"type": "string", "format": "date-time"},
          "assurance_tier": {"type": "string"}
        }
      }
    },
    "revocation_pointers": {"type": "array", "items": {"type": "string"}},
    "signature": {"type": "string"},
    "signer_public_key_kid": {"type": "string"}
  }
}
